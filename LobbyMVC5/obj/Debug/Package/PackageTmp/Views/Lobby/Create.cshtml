@model LobbyMVC5.Models.CreateLobbyViewModel
@{
    ViewData["Title"] = Resources.Resources.CreateLobbyStr;
}

<h2>@ViewData["Title"]</h2>

@*@using (Html.BeginForm("Create", "Lobby", FormMethod.Post))
{

}*@

<form asp-controller="Lobby" asp-action="Create" method="post" class="form-horizontal" role="form">
    <hr/>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-1">
                @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
    </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, Resources.Resources.NameStr, new { @class = "col-md-2 control-label" })
            @*<label asp-for="Name" class="col-md-2 control-label"></label>*@
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @*<input asp-for="Name" class="form-control" />*@
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RequiredUsersAmountStr, Resources.Resources.RequiredUsersAmount, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @*<input asp-for="RequiredUsersAmount" class="form-control"/>
                    <span asp-validation-for="RequiredUsersAmount" class="text-danger"></span>*@
            @Html.DropDownListFor(m => m.RequiredUsersAmountStr, new List<SelectListItem>()
            {
                new SelectListItem()
                {
                    Text = Resources.Resources.TwoUsersLobby,
                    Value = "2"
                },
                new SelectListItem()
                {
                    Text = Resources.Resources.FourUsersLobby,
                    Value = "4"
                }
            })
        </div>
    </div>
        <div class="form-group">

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">@Resources.Resources.CreateStr</button>
            </div>
        </div>
</form>

@section Scripts {
    @{ Html.RenderPartial("_ValidationScriptsPartial"); }
}
